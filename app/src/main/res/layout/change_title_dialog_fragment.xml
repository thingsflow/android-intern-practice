<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/organizationGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organization: "
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/organizationInput"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/organizationGuide"
        app:layout_constraintStart_toEndOf="@+id/organizationGuide"
        app:layout_constraintBottom_toBottomOf="@id/organizationGuide"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/repositoryGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository: "
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/organizationGuide"
        app:layout_constraintStart_toStartOf="@id/organizationGuide"
        app:layout_constraintEnd_toEndOf="@id/organizationGuide"/>

    <EditText
        android:id="@+id/repositoryInput"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/repositoryGuide"
        app:layout_constraintStart_toEndOf="@+id/repositoryGuide"
        app:layout_constraintBottom_toBottomOf="@id/repositoryGuide"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set title"
        app:layout_constraintTop_toBottomOf="@id/repositoryInput"
        app:layout_constraintStart_toStartOf="@id/repositoryGuide"
        app:layout_constraintEnd_toEndOf="@id/repositoryInput"/>
</androidx.constraintlayout.widget.ConstraintLayout>