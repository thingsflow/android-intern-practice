<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/organizationGuide"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Organization: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/organizationInput"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/organizationGuide"/>

    <TextView
        android:id="@+id/repositoryGuide"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Repository: "
        app:layout_constraintTop_toBottomOf="@+id/organizationGuide"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/repositoryInput"
        android:layout_width="200dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/organizationInput"
        app:layout_constraintStart_toEndOf="@+id/repositoryGuide"/>


</androidx.constraintlayout.widget.ConstraintLayout>