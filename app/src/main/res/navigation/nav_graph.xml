<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.thingsflow.internapplication.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_main_to_detail"
            app:destination="@+id/issueDetailFragment">
            <argument
                android:name="issuePosition"
                app:argType="integer"
                android:defaultValue="0"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/issueDetailFragment"
        android:name="com.thingsflow.internapplication.ui.detail.IssueDetailFragment"
        android:label="IssueDetailFragment"
        tools:layout="@layout/issue_detail_fragment">
        <argument
            android:name="issuePosition"
            app:argType="integer"/>
    </fragment>

</navigation>